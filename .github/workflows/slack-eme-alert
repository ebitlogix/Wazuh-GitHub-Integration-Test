name: Slack Alert on .eme File Changes

on:
  push:
    paths:
      - '**/*.eme'   # âœ… only trigger if .eme files are modified

jobs:
  alert:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout repo
        uses: actions/checkout@v3

      - name: Send Slack alert
        uses: rtCamp/action-slack-notify@v2
        env:
          SLACK_WEBHOOK: ${{ secrets.SLACK_GITHUB_INTEGRATION_URL }}
          SLACK_USERNAME: "GitHub Bot"
          SLACK_CHANNEL: "github-eme-file-modification"
          SLACK_COLOR: "#FF0000"
          SLACK_TITLE: "ðŸš¨ .eme file modified"
          SLACK_MESSAGE: |
            *Repo:* ${{ github.repository }}
            *Branch:* ${{ github.ref_name }}
            *Commit:* ${{ github.sha }}
            *Actor:* ${{ github.actor }}
            *Message:* ${{ github.event.head_commit.message }}
